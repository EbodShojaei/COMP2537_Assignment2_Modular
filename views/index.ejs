<%- include("templates/header") %>
    <div class="container px-5 mt-5">
        <% if (!authenticated) { %>
            <button class="p-2 m-2 col-sm-2 btn btn-primary"
                onclick="location.href = window.location.origin + '/login'">Login</button>
            <button class="p-2 m-2 col-sm-2 btn btn-primary"
                onclick="location.href = window.location.origin + '/signup'">Sign Up</button>
            <% } else { %>
                <h1>Hello, <%= name %>!</h1>
                <button class="p-2 m-2 col-sm-2 btn btn-primary"
                    onclick="location.href = window.location.origin + '/members'">Members</button>
                <button class="p-2 m-2 col-sm-2 btn btn-danger"
                    onclick="location.href = window.location.origin + '/logout'">Logout</button>
                <% } %>
    </div>
<%- include("templates/footer") %>